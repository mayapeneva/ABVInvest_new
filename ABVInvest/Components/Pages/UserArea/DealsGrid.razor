<BaseGrid TModel="DealViewModel"
          Models="DealsModels"
          Title="Списък със сделки на ценни книжа към дата"
          FileName="Deals"
          Columns="DealColumns"
          PdfColumns="PdfColumns"
          Date="Date">
</BaseGrid>

@code {
    [Parameter]
    public IEnumerable<DealViewModel> DealsModels { get; set; } = [];

    [Parameter]
    public DateOnly? Date { get; set; }

    private List<GridColumn> DealColumns = new List<GridColumn>
    {
        new GridColumn { Field = nameof(DealViewModel.DealType), HeaderText = ShortConstants.Deals.DealType, Width = "100" },
        new GridColumn { Field = nameof(DealViewModel.SecurityBfbCode), HeaderText = ShortConstants.Common.BfbCode, Width = "100" },
        new GridColumn { Field = nameof(DealViewModel.SecurityIssuerName), HeaderText = ShortConstants.Common.SecurityIssuer, Width = "200" },
        new GridColumn { Field = nameof(DealViewModel.Quantity), HeaderText = ShortConstants.Deals.Quantity, Width = "100" },
        new GridColumn { Field = nameof(DealViewModel.Price), HeaderText = ShortConstants.Deals.Price, Width = "100" },
        new GridColumn { Field = nameof(DealViewModel.Coupon), HeaderText = ShortConstants.Deals.Coupon, Width = "100" },
        new GridColumn { Field = nameof(DealViewModel.TotalPrice), HeaderText = ShortConstants.Deals.TotalPrice, Width = "100" },
        new GridColumn { Field = nameof(DealViewModel.Fee), HeaderText = ShortConstants.Deals.Fee, Width = "100" },
        new GridColumn { Field = nameof(DealViewModel.CurrencyCode), HeaderText = ShortConstants.Common.CurrencyCode, Width = "100" },
        new GridColumn { Field = nameof(DealViewModel.Settlement), HeaderText = ShortConstants.Deals.Settlement, Width = "100" },
        new GridColumn { Field = nameof(DealViewModel.MarketName), HeaderText = ShortConstants.Deals.MarketName, Width = "200" }
    };

    private List<GridColumn> PdfColumns = new List<GridColumn>
    {
        new GridColumn(){ Field=nameof(DealViewModel.DealType), HeaderText=@ShortConstants.Deals.DealType, Width="60"},
        new GridColumn(){ Field=nameof(DealViewModel.SecurityBfbCode), HeaderText=@ShortConstants.Common.BfbCode, Width="50"},
        new GridColumn(){ Field=nameof(DealViewModel.SecurityIssuerName), HeaderText=@ShortConstants.Common.SecurityIssuer, Width="100"},
        new GridColumn(){ Field=nameof(DealViewModel.Quantity), HeaderText=@ShortConstants.Deals.Quantity, Width="70"},
        new GridColumn(){ Field=nameof(DealViewModel.Price), HeaderText=@ShortConstants.Deals.Price, Width="50"},
        new GridColumn(){ Field=nameof(DealViewModel.Coupon), HeaderText=@ShortConstants.Deals.Coupon, Width="50"},
        new GridColumn(){ Field=nameof(DealViewModel.TotalPrice), HeaderText=@ShortConstants.Deals.TotalPrice, Width="70"},
        new GridColumn(){ Field=nameof(DealViewModel.Fee), HeaderText=@ShortConstants.Deals.Fee, Width="75"},
        new GridColumn(){ Field=nameof(DealViewModel.CurrencyCode), HeaderText=@ShortConstants.Common.CurrencyCode, Width="50"},
        new GridColumn(){ Field=nameof(DealViewModel.Settlement), HeaderText=@ShortConstants.Deals.Settlement, Width="70"},
        new GridColumn(){ Field=nameof(DealViewModel.MarketName), HeaderText=@ShortConstants.Deals.MarketName, Width="100"}
    };
}